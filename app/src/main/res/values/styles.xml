<resources>
    <!-- 若想避免初次启动首页未加载时无沉浸式状态栏效果的问题，请使用或继承此主题 -->
    <style name="SupportTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">true</item>
    </style>

    <style name="blackTheme" parent="SupportTheme">
        <item name="backgroundColor">@color/black</item>
        <item name="textColor">@color/white</item>
        <item name="themeIcon">@drawable/theme_white</item>

        <item name="normalButtonBackground">@drawable/normal_button_background</item>
        <item name="normalButtonBackgroundUnpressedColor">@color/gray32</item>
        <item name="normalButtonBackgroundPressedColor">@color/gray72</item>
        <item name="normalButtonBackgroundPressedStrokeColor">@color/transparent</item>
        <item name="normalButtonBackgroundUnpressedStrokeColor">@color/transparent</item>
        <item name="normalButtonBackgroundStrokeWidth">@dimen/none</item>
        <item name="normalButtonTextColor">@color/grayFE</item>

        <item name="zeroButtonBackground">@drawable/normal_button_background_0</item>

        <item name="specialButton1Background">@drawable/special_button_background</item>
        <item name="specialButton1BackgroundUnpressedColor">@color/grayA4</item>
        <item name="specialButton1BackgroundPressedColor">@color/grayD8</item>
        <item name="specialButton1BackgroundUnpressedStrokeColor">@color/transparent</item>
        <item name="specialButton1BackgroundPressedStrokeColor">@color/transparent</item>
        <item name="specialButton1BackgroundStrokeWidth">@dimen/none</item>
        <item name="specialButton1TextColor">@color/black</item>

        <item name="specialButton2Background">@drawable/special_button_background2</item>
        <item name="specialButton2BackgroundUnpressedColor">@color/orange</item>
        <item name="specialButton2BackgroundPressedColor">@color/orange2</item>
        <item name="specialButton2BackgroundUnpressedStrokeColor">@color/transparent</item>
        <item name="specialButton2BackgroundPressedStrokeColor">@color/transparent</item>
        <item name="specialButton2BackgroundStrokeWidth">@dimen/none</item>
        <item name="specialButton2TextColor">@color/grayFE</item>

        <item name="specialButton2BackgroundRevert">
            @drawable/special_button_background2_selected
        </item>
        <item name="specialButton2BackgroundRevertUnpressedColor">@color/white</item>
        <item name="specialButton2BackgroundRevertPressedColor">@color/orange2</item>
        <item name="specialButton2BackgroundRevertUnpressedStrokeColor">@color/transparent</item>
        <item name="specialButton2BackgroundRevertPressedStrokeColor">@color/transparent</item>
        <item name="specialButton2BackgroundRevertStrokeWidth">@dimen/none</item>
        <item name="specialButton2TextColorRevert">@color/orange</item>
    </style>

    <style name="baseButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="normalButton" parent="baseButton">
        <item name="android:background">?attr/normalButtonBackground</item>
        <item name="android:textColor">?attr/normalButtonTextColor</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="specialButtonA" parent="baseButton">
        <item name="android:background">?attr/specialButton1Background</item>
        <item name="android:textColor">?attr/specialButton1TextColor</item>
    </style>

    <style name="specialButtonB" parent="baseButton">
        <item name="android:background">?attr/specialButton2Background</item>
        <item name="android:textColor">?attr/specialButton2TextColor</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="specialButtonBRevert" parent="baseButton">
        <item name="android:background">?attr/specialButton2BackgroundRevert</item>
        <item name="android:textColor">?attr/specialButton2TextColorRevert</item>
        <item name="android:textSize">35sp</item>
    </style>
</resources>
